{% extends 'page.html.twig' %}

{% block title %}create entry{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <div class="d-flex flex-row align-items-center justify-content-between">
                    <h1>create entry</h1>

                    <div class="flex-shrink-0">
                        <a class="btn btn-sm btn-secondary" href="{{ url_for('entry.index') }}">
                            back
                        </a>
                    </div>
                </div>
            </div>

            {% if error %}
                <div class="mb-3">
                    <div class="alert alert-danger" role="alert">
                        an error has occurred
                    </div>
                </div>
            {% endif %}

            <form method="post" action="">
                <input type="hidden" name="entry[id]" value="-1">

                <div class="form-row">
                    <div class="col form-group">
                        <label for="formControlFromDateTime">from datetime</label>
                        <input id="formControlFromDateTime" class="form-control" type="date"
                               name="entry[datetime_from]">
                    </div>
                    <div class="col form-group">
                        <label for="formControlToDateTime">to datetime</label>
                        <input id="formControlToDateTime" class="form-control" type="date" name="entry[datetime_to]">
                    </div>
                </div>

                <div class="form-group">
                    <label for="formInputContent">content</label>
                    <textarea id="formInputContent" class="form-control" name="entry[content]"
                              placeholder="content"></textarea>
                </div>

                <div class="form-group">
                    <label for="formControlIssue">issue</label>
                    <input id="formControlIssue" class="form-control" type="text" name="entry[issue]"
                           placeholder="issue">
                </div>

                <button class="btn btn-primary" type="submit" name="submit">
                    create
                </button>
            </form>
        </div>
    </div>
{% endblock %}
