{% extends 'page.html.twig' %}

{% block title %}start{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <div class="d-flex flex-row align-items-center justify-content-between">
                    <h1>start</h1>

                    <div>
                        <button class="btn btn-sm btn-info" type="button" data-toggle="collapse"
                                data-target="#collapseImport" aria-expanded="false" aria-controls="collapseImport">
                            show import configuration
                        </button>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="card card-body">
                    <p class="h3">
                        about <mark>apprenticeship-report</mark>:
                    </p>

                    <p>
                        a tool for generating my apprenticeship report.
                    </p>
                </div>
            </div>

            <div class="collapse" id="collapseImport">
                <div class="card card-body">
                    <p class="h3">import configuration</p>

                    <p>
                        the following table shows the current import configuration
                    </p>

                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">option</th>
                            <th scope="col">value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for option, value in import.configuration %}
                            <tr>
                                <th scope="row">
                                    <code>{{ option }}</code>
                                </th>
                                <td>
                                    <code>{{ value }}</code>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <p>
                        to import the file at the <code>path</code> with the <code>time_limit</code> shown above, click import
                    </p>

                    <button id="import" class="btn btn-info" data-url="{{ url_for('index.import') }}">
                        import
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalImport" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalImportLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div id="modalImportLabel" class="h5 modal-title">import result</div>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <code id="modalImportContent"></code>

                    <p class="mt-3">
                        refer to the log for further details
                    </p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">
                        close
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
