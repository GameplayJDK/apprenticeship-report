{% extends '_page.html.twig' %}

{% block title %}print{% endblock %}

{# this page is written in german #}

{% block content %}
    <div id="print" class="container-print table-responsive">
        <table class="table table-borderless">
            <thead>
            <tr class="bg-white p-2">
                <th>
                    <header class="d-flex justify-content-between">
                        <div class="p-2">
                            <img src="/asset/image/company.png" width="auto" height="30px"
                                 class="d-inline-block align-top" alt="">
                        </div>

                        <div class="p-2 text-right">
                            author name
                        </div>
                    </header>
                </th>
            </tr>
            </thead>

            <tbody>
            {% for entry in data.list %}
                {% for i in 0..10 %}
                    <tr>
                        <td>
                            <div class="entry container border-bottom border-dark">
                                <div class="entry-headline mt-3">
                                    <h3>
                                        Woche {{ '%03d'|format(loop.index) }}
                                    </h3>

                                    <small>{{ entry.datetimeFrom|date('d.m.Y') }}
                                        - {{ entry.datetimeTo|date('d.m.Y') }}</small>
                                </div>

                                <div class="entry-text px-2 my-3">{{ entry.content }}</div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
            <tr class="d-flex flex-grow-1">
            </tr>
            </tbody>

            <tfoot>
            <tr class="bg-white p-2">
                <td>
                    <footer class="d-flex justify-content-between invisible-print">
                        {% block footer %}
                            <div class="p-2">
                                generated
                            </div>

                            <div class="p-2">
                            </div>
                        {% endblock %}
                    </footer>

                    <div class="d-none d-print-block fixed-bottom bg-white">
                        <footer class="d-flex justify-content-between p-2">
                            {{ block('footer') }}
                        </footer>
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
